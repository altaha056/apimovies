<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10pt">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">
            <ImageView
                android:id="@+id/gambarberita"
                android:layout_width="50pt"
                android:layout_height="70pt"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/judulberita"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Judul berita"
                    android:maxLines="2"
                    android:textSize="10pt"
                    android:textColor="#FF5722"/>
                <TextView
                    android:id="@+id/deskripsiberita"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="deskripsi berita\ndeskripsi berita\ndeskripsi berita\ndeskripsi berita"
                    android:inputType="textMultiLine"
                    android:layout_marginVertical="3pt"
                    android:maxLines="5"
                    android:textColor="#404040"
                    android:textSize="8pt"/>
                <TextView
                    android:id="@+id/pengarangberita"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="pengarang berita"
                    android:inputType="textMultiLine"
                    android:textSize="6pt"/>
                <TextView
                    android:id="@+id/rilisberita"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:text="rilis berita"
                    android:textSize="6pt"/>
            </LinearLayout>
        </LinearLayout>
        </androidx.cardview.widget.CardView>

</ScrollView>